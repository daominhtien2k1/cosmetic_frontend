final response = await http.post(Uri.https('jsonplaceholder.typicode.com','posts'), body: {'value': 5}); // error
final response1 = await http.post(Uri.https('jsonplaceholder.typicode.com','posts'), body: {'value': '5'});
final response2 = await http.post(Uri.parse('https://jsonplaceholder.typicode.com/posts'), body: {'value': '5'});
final response3 = await http.post(Uri.parse('https://jsonplaceholder.typicode.com/posts'),
  headers: <String, String>{
            'Content-Type': 'application/json; charset=UTF-8',
  },
  body: jsonEncode(<String, dynamic>{
      'value': '5',
  })
);

